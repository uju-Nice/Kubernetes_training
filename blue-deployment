apiVersion: apps/v1
kind: Deployment
metadata:
  name: blue-deployment
  labels:
    app: blue
spec:
  replicas: 2
  selector:
    matchLabels:
      app: blue
  template:
    metadata:
      labels:
        app: blue
    spec:
      containers:
      - name: blue
        image: nginx:1.14.2
        ports:
        - containerPort: 80




---








kind: Service
metadata:
  name: blue-service
spec:
  type: NodePort
  selector:
    app: blue
  ports:
    - port: 80
      targetPort: 80
      nodePort: 30080